<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.nghia.cumback.MainActivity"

    android:id="@+id/mainView"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    grid:columnCount="4"
    grid:rowCount="7">

    <TextView
        android:id="@+id/result_view"
        android:layout_width="match_parent"
        android:layout_margin="0dp"

        android:background="@drawable/result_view"

        android:padding="0dp"
        grid:layout_columnSpan="4"
        grid:layout_rowWeight="3" />

    <Button
        android:id="@+id/btn_ac"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/toolbox_button"
        android:gravity="center"

        android:text="AC"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_sign"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/toolbox_button"
        android:gravity="center"

        android:text="Â±"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_percentage"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/toolbox_button"
        android:gravity="center"

        android:text="%"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_divide"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/toolbox_button"
        android:gravity="center"

        android:text="/"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_num_7"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/number_button"
        android:gravity="center"

        android:text="7"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_num_8"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/number_button"
        android:gravity="center"

        android:text="8"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_num_9"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/number_button"
        android:gravity="center"

        android:text="9"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_multiply"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/toolbox_button"
        android:gravity="center"

        android:text="*"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_num_4"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/number_button"
        android:gravity="center"

        android:text="4"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_num_5"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/number_button"
        android:gravity="center"

        android:text="5"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_num_6"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/number_button"
        android:gravity="center"

        android:text="6"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_minus"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/toolbox_button"
        android:gravity="center"

        android:text="-"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_num_1"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/number_button"
        android:gravity="center"

        android:text="1"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_num_2"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/number_button"
        android:gravity="center"

        android:text="2"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_num_3"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/number_button"
        android:gravity="center"

        android:text="3"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_plus"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/toolbox_button"
        android:gravity="center"

        android:text="+"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_num_0"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        grid:layout_columnSpan="2"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"

        android:background="@drawable/number_button"
        android:gravity="center"

        android:text="0"
        android:textColor="@color/buttonText"
        android:fontFamily="sans-serif"
        android:textSize="33sp" />


    <Button
        android:id="@+id/btn_point"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/toolbox_button"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="0dp"

        android:text="."
        android:textColor="@color/buttonText"
        android:textSize="33sp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1" />

    <Button
        android:id="@+id/btn_equals"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/result_button"
        android:fontFamily="sans-serif"

        android:gravity="center"
        android:padding="0dp"

        android:text="="
        android:textColor="@color/buttonText"
        android:textSize="33sp"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1" />

</android.support.v7.widget.GridLayout>
